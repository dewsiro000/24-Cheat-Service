{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": ".", 
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]        
    },
    "typeRoots": ["./src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
}

{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "vercel/node"
        },
        {
            "src": "src/**/**",
            "use": "@vercel/static" 
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "server.js",
          "headers": {
            "Access-Control-Allow-Origin": "*"
          }
        }
    ]
}